{
  "name": "local-difference-checker",
  "author": "y11i",
  "version": "0.1.0",
  "description": "Local-only desktop diff checker built with Electron, React, and Vite.",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:preload && run-p dev:renderer dev:main:watch dev:preload:watch dev:electron",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:preload:watch": "node scripts/watch-preload.mjs",
    "dev:electron": "wait-on tcp:5173 dist/main/main.js dist/main/preload.cjs && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "run-s build:clean build:renderer build:main build:preload",
    "build:clean": "rimraf dist",
    "build:renderer": "vite build --config vite.config.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json && node scripts/rename-preload.mjs",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "eslint \"app/renderer/src/**/*.{ts,tsx}\"",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "release": "./scripts/create-release.sh"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-switch": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "diff": "^5.1.0",
    "diff2html": "^3.4.47",
    "electron-store": "^9.0.0",
    "lucide-react": "^0.378.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  }
}
